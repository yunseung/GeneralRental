<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.WithoutActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- ButtonType_A -->
    <style name="StyleButtonA">
        <item name="android:layout_height">@dimen/button_typeA_height</item>
        <item name="android:background">@drawable/btn_type_a</item>
        <item name="android:textColor">@color/btn_type_a_text_color</item>
        <item name="android:textSize">@dimen/button_text_size_def</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">sans</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- ButtonType_CANCEL -->
    <style name="StyleButtonCancel">
        <item name="android:layout_height">@dimen/button_cancel_height</item>
        <item name="android:background">@drawable/btn_type_cancel</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_text_size_def</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">sans</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
